<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.honghaizi.test.honghaizi.LoginActivity">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_back"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="登录" />


    </RelativeLayout>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll"
        android:background="#c3c3c3" />
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:id="@+id/l_ll"
    android:layout_below="@+id/v"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="账号"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:numeric="integer"
            android:id="@+id/login_et_phone"
            android:maxLength="13"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:hint="手机号/邮箱/用户名/门店会员卡"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            />
        <Button
            android:id="@+id/button_clear_shouji"
            android:layout_alignParentRight="true"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:visibility="invisible"
            android:background="@mipmap/search_delete_input"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="1dp"
        android:background="#c3c3c3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="密码"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/login_et_password"
            android:layout_width="match_parent"
            android:numeric="integer"
            android:singleLine="true"
            android:password="true"
            android:hint="请输入6-20位易购密码"
            android:inputType="number"
            android:maxLength="20"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="50dp"
            />
        <Button
            android:id="@+id/button_clear_mima"
            android:layout_alignParentRight="true"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginRight="105dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:background="@mipmap/search_delete_input"/>
        <ImageView
            android:id="@+id/togglebutton"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_hidden"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/login_but"
        android:layout_marginTop="20dp"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_login_mf"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_register_normal"/>
    </RelativeLayout>

</LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/l_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_v"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:text="--------------------    其他方式登录  --------------------"
                />

        <TextView
            android:layout_below="@+id/tv_v"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_store_membership_card"
            android:text="门店会员卡"
            />
    </RelativeLayout>


</RelativeLayout>
